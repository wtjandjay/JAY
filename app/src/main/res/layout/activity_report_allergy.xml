<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include layout="@layout/comm_title"/>
    <include
        android:visibility="gone"
        layout="@layout/title_info"/>
    <com.diligroup.view.TagFlowLayout
        android:id="@+id/tag_allergy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        zhy:max_select="1"/>
    <View
        android:background="#F0F0F0"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#D9D9D9"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <Button
                android:lines="1"
                android:drawableLeft="@drawable/iv_cpfl"
                android:text="成品分类"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:drawableTop="@drawable/iv_gulei_normal"
                android:drawablePadding="10dp"
                android:text="谷类"
                android:id="@+id/bt_class_gu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:drawableTop="@drawable/iv_dou_normal"
                android:drawablePadding="10dp"
                android:text="豆类"
                android:id="@+id/bt_class_dou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:drawableTop="@drawable/iv_shucai_normal"
                android:drawablePadding="10dp"
                android:text="蔬菜类"
                android:id="@+id/bt_class_shucai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:drawableTop="@drawable/iv_fruit_normal"
                android:drawablePadding="10dp"
                android:text="水果类"
                android:id="@+id/bt_class_fruit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:drawableTop="@drawable/iv_jianguo_normal"
                android:drawablePadding="10dp"
                android:text="坚果类"
                android:id="@+id/bt_class_jianguo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:drawableTop="@drawable/iv_milk_normal"
                android:drawablePadding="10dp"
                android:text="乳制品类"
                android:id="@+id/bt_class_milk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <FrameLayout
            android:id="@+id/frame_list"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </FrameLayout>
    </LinearLayout>
</LinearLayout>
