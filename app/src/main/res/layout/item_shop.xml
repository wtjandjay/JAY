<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_st"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:src="@drawable/iv_shutiao" />

    <TextView
        android:id="@+id/tv_shopname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_toRightOf="@id/iv_st"
        android:text="国贸店" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_st"
        android:layout_below="@id/iv_st"
        android:layout_marginTop="7dp"
        android:src="@drawable/iv_location_" />

    <TextView
        android:id="@+id/tv_shop_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_shopname"
        android:layout_below="@id/tv_shopname"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/iv_st"
        android:text="北京市朝阳区东三环中路333号" />
    <ImageView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/iv_go_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>